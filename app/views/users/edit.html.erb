    </svg>

    <%= f.text_field :job, label: false, placeholder: 'Job', class: 'flex flex-wrap content-center'%>
<!--    <span class="flex flex-wrap content-center">Job: <%#= current_user.job? ? current_user.job : 'Non spécifié'  %></span>-->
