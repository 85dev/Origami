<div class="container-profile">
  <div class="header-profile">
    <div class="img-profile">
      <img src="<%= cl_image_path current_user.photo.key %>" alt="profile">
    </div>
    <p class="name"><%= "#{current_user.first_name} #{current_user.last_name}" %></p>
    <p class="age"><%= @age %> ans</p>
    <%= form_for current_user do |f| %>
      <%= f.text_field :description, class: 'description', placeholder: 'Description' %>
  </div>

  <div class="item">
